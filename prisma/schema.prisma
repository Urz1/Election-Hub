generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organizer {
  id                  String     @id @default(cuid())
  name                String
  email               String     @unique
  passwordHash        String?
  emailVerified       Boolean    @default(false)
  verificationCode    String?
  verificationExpiry  DateTime?
  resetToken          String?
  resetTokenExpiry    DateTime?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  elections           Election[]
  accounts            Account[]

  @@index([email])
}

model Account {
  id                String    @id @default(cuid())
  organizerId       String
  organizer         Organizer @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  provider          String
  providerAccountId String
  createdAt         DateTime  @default(now())

  @@unique([provider, providerAccountId])
  @@index([organizerId])
}

model Election {
  id                  String            @id @default(cuid())
  organizerId         String
  organizer           Organizer         @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  title               String
  description         String            @default("")
  shareCode           String            @unique @default(cuid())
  status              String            @default("draft")
  registrationStart   DateTime?
  registrationEnd     DateTime?
  votingStart         DateTime?
  votingEnd           DateTime?
  securityLevel       String            @default("standard")
  allowVoteUpdate     Boolean           @default(false)
  showLiveResults     Boolean           @default(false)
  resultsVisibility   String            @default("organizer")
  requireLocation     Boolean           @default(false)
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  regions             Region[]
  positions           Position[]
  customFields        CustomField[]
  voters              Voter[]
  votes               Vote[]

  @@index([organizerId])
  @@index([shareCode])
}

model Region {
  id           String   @id @default(cuid())
  electionId   String
  election     Election @relation(fields: [electionId], references: [id], onDelete: Cascade)
  name         String
  geometry     String   @db.Text
  bufferMeters Int      @default(20)
  createdAt    DateTime @default(now())
  voters       Voter[]

  @@index([electionId])
}

model Position {
  id           String      @id @default(cuid())
  electionId   String
  election     Election    @relation(fields: [electionId], references: [id], onDelete: Cascade)
  title        String
  description  String      @default("")
  displayOrder Int         @default(0)
  createdAt    DateTime    @default(now())
  candidates   Candidate[]
  votes        Vote[]

  @@index([electionId])
}

model Candidate {
  id           String   @id @default(cuid())
  positionId   String
  position     Position @relation(fields: [positionId], references: [id], onDelete: Cascade)
  name         String
  description  String   @default("")
  photoUrl     String?
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  votes        Vote[]

  @@index([positionId])
}

model CustomField {
  id           String   @id @default(cuid())
  electionId   String
  election     Election @relation(fields: [electionId], references: [id], onDelete: Cascade)
  label        String
  fieldType    String
  isRequired   Boolean  @default(false)
  options      String   @default("[]") @db.Text
  displayOrder Int      @default(0)

  @@index([electionId])
}

model Voter {
  id                 String    @id @default(cuid())
  electionId         String
  election           Election  @relation(fields: [electionId], references: [id], onDelete: Cascade)
  regionId           String?
  region             Region?   @relation(fields: [regionId], references: [id])
  email              String
  emailVerified      Boolean   @default(false)
  verificationCode   String?
  verificationExpiry DateTime?
  deviceFingerprint  String?
  customFieldValues  String    @default("{}") @db.Text
  locationLat        Float?
  locationLng        Float?
  registeredAt       DateTime  @default(now())
  votes              Vote[]

  @@unique([electionId, email])
  @@index([electionId])
  @@index([deviceFingerprint])
}

model Vote {
  id          String    @id @default(cuid())
  electionId  String
  election    Election  @relation(fields: [electionId], references: [id], onDelete: Cascade)
  voterId     String
  voter       Voter     @relation(fields: [voterId], references: [id], onDelete: Cascade)
  positionId  String
  position    Position  @relation(fields: [positionId], references: [id], onDelete: Cascade)
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  castAt      DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([electionId, voterId, positionId])
  @@index([electionId])
  @@index([voterId])
  @@index([candidateId])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  actor     String
  actorType String
  targetId  String?
  meta      String   @default("{}") @db.Text
  ip        String?
  createdAt DateTime @default(now())

  @@index([action])
  @@index([actor])
  @@index([targetId])
  @@index([createdAt])
}
